                      "submodules": "{../dropProject.custom.submodules}"
                    },
                    "waitOnAll": true
                  },
                  "transforms": [
                    {
                      "code": "\timport java.io.File as File\n\timport os\n\tfrom org.eclipse.jgit.api import Git\n\tfrom org.eclipse.jgit.submodule import SubmoduleWalk\n\tfrom org.eclipse.jgit.submodule.SubmoduleWalk import IgnoreSubmoduleMode\n\n\tpath \u003d File(value.folder)\n\t\n\tisSubmodule \u003d value.project in value.submodules\n\n\tgit \u003d Git.open(path) if not isSubmodule else Git.wrap(SubmoduleWalk.getSubmoduleRepository(path, value.project))\n\t\t\n\tstatusCmd \u003d git.status()\n\t\n\tisProject \u003d len(value.project) \u003e 0 and not isSubmodule\n\t\n\tif isProject:\n\t\tstatusCmd \u003d statusCmd.addPath(value.project)\n\t\n\tstatus \u003d statusCmd.call()\n\t\n\tfileStatus \u003d {\n\t\t#\"UncommitedChanged\": list(status.getUncommittedChanges()),\n\t\t\"Added\": list(status.getAdded()),\n\t\t\"Changed\": list(status.getChanged()),\n\t\t\"Conflicting\": list(status.getConflicting()),\n\t\t#\"Ignored\": list(status.getIgnoredNotInIndex()),\n\t\t\"Missing\": list(status.getMissing()),\n\t\t\"Modified\": list(status.getModified()),\n\t\t\"Removed\": list(status.getRemoved()),\n\t\t\"Untracked\": list(status.getUntracked())\n\t}\n\t\n\tgit.close()\n\t\n\tfiles \u003d {}\n\tfor key in fileStatus:\n\t\tfor file in fileStatus[key]:\n\t\t\tif isSubmodule or (isProject and file.startswith(value.project)) or (not isProject and not \"/\" in file):\n\t\t\t\tfiles[file] \u003d key\n\t\n\tresult \u003d []\n\tfor file in files:\n\t\tresult.append({\"file\": file, \"status\": files[file]})\n\t\t\n\tdiff \u003d [{\"value\": file, \"style\": {\"classes\": \"git_filestatus git_filestatus_\" + file[\"status\"]}} for file in result]\n\tdiff.sort()\n\t\n\treturn diff",
                      "type": "script"
                    }
                  ],
                  "type": "expr-struct"
                }
              }
